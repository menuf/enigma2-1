<screen position="0,0" size="800,480">
	<ePixmap pixmap="display/clock_skin/analog_lcd_rail.png" position="0,0" size="800,480" zPosition="0" />
	<widget source="global.CurrentTime" render="OMaClockLcd" position="center,center" size="800,480" hColor="black" linewidth="6" zPosition="4" alphatest="on">
		<convert type="OMaclock">Hours</convert>
	</widget>
	<widget source="global.CurrentTime" render="OMaClockLcd" position="center,center" size="800,480" mColor="black" linewidth="5" zPosition="3" alphatest="on">
		<convert type="OMaclock">Minutes</convert>
	</widget>
	<widget source="global.CurrentTime" render="OMaClockLcd" position="center,center" size="800,480" sColor="red" linewidth="3" zPosition="2" alphatest="on">
		<convert type="OMaclock">Seconds</convert>
	</widget>
	<widget source="session.RecordState" render="Pixmap" pixmap="display/clock_skin/analog_lcd_rail_rec.png" position="0,0" size="800,480" zPosition="1" transparent="1" alphatest="on" >
		<convert type="ConditionalShowHide">Blink</convert>
	</widget>
</screen>
